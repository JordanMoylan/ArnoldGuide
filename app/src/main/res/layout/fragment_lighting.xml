<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/whiteColor"
    android:layout_height="match_parent"
    tools:context=".FavouriteFragment"
    android:padding="20dp">

    <TextView
        android:id="@+id/SampleAA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ai Area Light"
        android:textColor="@color/colorPrimary"
        android:textSize="38sp" />

    <TextView
        android:id="@+id/cameraAA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SampleAA"
        android:layout_marginTop="20dp"
        android:text="Lighting"
        android:textColor="@color/colorPrimary"
        android:textSize="23sp" />

    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cameraAA"
        android:paddingTop="20dp"
        android:fillViewport="true"
        android:scrollbars="vertical">
    <TextView
        android:id="@+id/CamAAText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lightingText"
        android:textColor="#2E1818"
        android:gravity="fill_horizontal"
        android:textSize="23sp" />
    </ScrollView>

</RelativeLayout>